.item{
  display: flex;  
  padding:20rpx 40rpx;
  margin:20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.poster{
  flex: 1;
  width:120rpx;
  height:178rpx;
  margin-right:20rpx;
}
.meta{
  flex: 4;
}
.title{
  display: block;
  color:#000;
  font-size:40rpx;
  margin-bottom:20rpx;
}
.subTitle,.directors{
  display: block;
  color:#999;
  font-size:24rpx;
  margin-bottom:15rpx;
}
.directors text{
  display: inline-block;
  margin-right:10rpx;
}
.rating{
  flex: 1;
}
.rating text{
  display: inline-block;
  padding:10rpx;
  background-color: #f9705a;
  color:#fff;
  border-radius: 10rpx;
}