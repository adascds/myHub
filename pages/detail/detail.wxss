.background{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width:100%;
  height:100%;
  z-index: -100;
  opacity: .1;
}
.meta{
  display: flex;
  flex-direction: column;
}
.poster{
  display: block;
  width:400rpx;
  height: 600rpx;
  margin: 0 auto;
  margin-bottom:30rpx;
}
.meta text{
  display: inline-block;
  margin-bottom:40rpx;
  color:#333;
  text-align: center;
}
.meta text.title{
  font-size:36rpx;
  color:#000;
}
.summary{
  width:80%;
  line-height: 50rpx;
  margin:25rpx auto;
  text-indent: 2em;
}